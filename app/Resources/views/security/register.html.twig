{% form_theme form 'bootstrap_3_layout.html.twig' %}

{# Registration: render a form to register #}

{% extends 'layout.html.twig' %}

{% block pageName %}{% trans %}Registration{% endtrans %}{% endblock %}

{% block contentTitle %}{% trans %}Registration{% endtrans %}{% endblock %}

{% block content %}
	<div class="loginContentDiv">
		{# Render the form #}
        {{ form_start(form) }}
            {{ form_row(form.username) }}
            {{ form_row(form.plainPassword.first) }}
            {{ form_row(form.plainPassword.second) }}
        
            <button type="submit" class="btn btn-success btn-lg">{% trans %}Register{% endtrans %}!</button>
        {{ form_end(form) }}
	</div>

{% endblock %}