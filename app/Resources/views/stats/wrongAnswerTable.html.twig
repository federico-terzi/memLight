{# Render a table with the most mistaken questions #}
{% if answers %}
	<table class="table table-striped">
    	<thead>
          <tr>
            <th>{% trans %}Course{% endtrans %}</th>
            <th>{% trans %}Question{% endtrans %}</th>
            <th>{% trans %}Mistakes{% endtrans %}</th>
          </tr>
        </thead>
        <tbody>
        	{% for answer in answers %}
        		<tr>
        			<td>{{ answer[0].course.name }}</td>
        			<td>{{ answer[0].questionText }}</td>
        			<td>{{ answer[1] }}</td>
        		</tr>
        	{% endfor %}
    	</tbody>
	</table>
	{#
	{% for answer in answers %}
		<p>{{ dump(answer) }}</p>
	{% endfor %}
	#}
{% else %}
	<p>{% trans %}You don't have any answer saved{% endtrans %}...</p>
{% endif %}