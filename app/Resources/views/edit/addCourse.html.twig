{% extends 'layout.html.twig' %}

{# Add Course: display a form to add a new course#}

{% set active_page="courses" %}

{% block pageName %}Add Course{% endblock %}

{% block contentTitle %}Add Course{% endblock %}

{% block content %}
	<div class="panel panel-info">
		<div class="panel-heading">Add Course</div>
		<div class="panel-body">
			{# Render the form #}
            {{ form_start(form) }}
            	{{ form_errors(form) }}
            
                {{ form_row(form.name) }}
            	{{ form_row(form.description) }}
            	{{ form_row(form.longDescription) }}
            	
            	<div class="form-group">
                	<button type="submit" class="btn btn-success btn-lg">Save Course</button>
                </div>
            {{ form_end(form) }}
		</div>
	</div>
{% endblock %}